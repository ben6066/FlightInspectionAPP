             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flight_Inspection_App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="420" d:DesignWidth="420">
    <Grid >
        <Canvas  x:Name="Base"  Width="340" Height="340">
            <Slider Margin="70,344,105,217" Value="{Binding VM_Rudder,Mode=OneWay}" Foreground="#FFFF2E00" Width="205" Height="21" Minimum="-1" Maximum="1" Background="#3FF72510" BorderBrush="#FFD60E0E" HorizontalAlignment="Center"/>
